@model DTOs.DTO.CreatePostVM;

@{
    ViewData["Title"] = "Create";
}





<div class="row  justify-content-center ">


    <div class="col-12 col-lg-8  border border-secondary">

        <h4>Crear Nueva Entrada</h4>
        

        <form asp-action="Create"  method="post" enctype="multipart/form-data" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group mb-3">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for=Descripcion id="summernote" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 d-flex ">


                <div class="pe-5">
                    <label asp-for="IdCategoria" class="control-label"></label>
                    <select asp-for="IdCategoria" class="form-control" asp-items="@ViewBag.IdCategoria"></select>
                </div>
                <div>
                    <label asp-for="ImagenFile" class="control-label"></label>
                    <input type="file" asp-for="ImagenFile" class="form-control" accept="/image/png, image/jpeg" />
                    <span asp-validation-for="ImagenFile" class="text-danger"></span>
                </div>
            </div>
          
            <div class="form-group  d-flex justify-content-between mb-3">

                <input type="submit" value="Create" class="btn btn-primary" />
               <div>
                    <a asp-action="Index" class=" btn btn-secondary">regresar</a>
               </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#summernote').summernote({
            placeholder: 'Hello stand alone ui',
            tabsize: 2,
            height: 300,
