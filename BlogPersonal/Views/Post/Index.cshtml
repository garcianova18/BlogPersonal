@using System.Text.RegularExpressions;
@model IEnumerable<DTOs.DTO.ListPostVM>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-5">Blog</h1>

<div class="container">

    <div class="row">
        @if (Model.Count() > 0)
        {
    
      

            @foreach (var item in Model)
            {
               <div class="col-3 mb-5">

                    <div class="card" >
                        <img src="/Imagenes/@item.Imagen" class="card-img-top" alt="..." style="height:250px">
                        <div class="card-body text-center">
                            <h5 class="card-title text-uppercase">@item.Titulo</h5>
                            <div class="card-text">
                                @{

                                    string text = item.Descripcion.Replace("&nbsp;", string.Empty);
                                    text = Regex.Replace(text, "<.*?>", string.Empty);

                                    if (text.Length >100)
                                    {
                                        text = text.Substring(0, 100);
                                    }
                                }
                                   @text...                           
                            </div>
                            <a asp-action="GetPost" asp-controller="Post" asp-route-id="@item.Id" class="btn btn-sm btn-primary mt-3">Leer Mas...</a>
                            <p class="text-muted text-start mt-5">Creado @item.FechaPublicado.ToString("d")</p>
                        </div>

                    </div>
               </div>
            }
               
     

        }
        else
        {
            
            <div class="col-12">

                <p>No Existe Registro</p>

            </div>
    
        }
    </div>

</div>
