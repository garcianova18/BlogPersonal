@using System.Text.RegularExpressions;
@model IEnumerable<DTOs.DTO.ListPostVM>
@{
    ViewData["Title"] = "Sitio del Ing. Wilson Garcia";
}



<div class="container">

    <div class="row">


        <div class="col-12 text-center mb-5 mt-2 text-white py-5 seccion_Presentacion rounded-2">

            <img src="~/Imagenes/ing_wilson.jpg" class="img-thumbnail rounded-circle"/>
            <h1 class=" mt-5">I,M Wilson Garcia Nova</h1>
            <h5>Ingeniero de Sistema y Computacion</h5>

            <a href="~/archivos/Ing. Wilson garcia nova.pdf" class="btn btn-outline-warning mt-3 descargar_curriculum ">

                <span class="pe-2">Descargar CV </span>
                <i class="fa-solid fa-file-arrow-down fa-beat-fade"></i> 
                
            </a>

            <div class="d-flex justify-content-center mt-3 mt-lg-0 justify-content-lg-end botones ">

                <a href="https://www.linkedin.com/in/wilson-garcia-nova-733439123/">  <i class="fa-brands fa-linkedin-in"></i>  </a>

                <a href="https://github.com/garcianova18">  <i class="fa-brands fa-github"></i>  </a>

               
            </div>
        </div>
      

        @if (Model.Count() > 0)
        {
    
            @foreach (var item in Model.OrderByDescending(f=> f.FechaPublicado))
            {
               <div class="col-12 col-md-6 col-lg-4 mb-5">

                    <div class="card shadow" >

                        @if (item.Imagen is not null)
                        {
                            <img src="/Imagenes/@item.Imagen" class="card-img-top" alt="..." height="250" style="" />

                        }
                        else
                        {

                            <div class="bg-primary w-100 d-flex justify-content-center align-items-center" style="height:250px">
                                
                                <p class="text-black-50">Sube una imagen</p>

                            </div>


                        }

                        <div class="card-body text-center">

                           <div class="text-start">
                                <p class="text-start bg-info d-inline-block p-1 text-white border rounded-3">@item.IdCategoriaNavigationNombre</p>
                           </div>

                            <h4 class="card-title text-uppercase">@item.Titulo</h4>
                            <div class="card-text">
                                @{

                                    string text = item.Descripcion.Replace("&nbsp;", string.Empty);
                                    text = Regex.Replace(text, "<.*?>", string.Empty);

                                    if (text.Length >100)
                                    {
                                        text = text.Substring(0, 100);
                                    }
                                }
                                   @text...                           
                            </div>
                            <a asp-action="Details" asp-controller="Post" asp-route-id="@item.Id" class="btn btn-sm btn-primary mt-3">Leer Mas...</a>
                            <p class="text-muted text-start  m-0">Autor <span class="text-primary">@item.IdUserNavigationUserName</span></p>
                            <p class="text-muted text-start  m-0">Creado @item.FechaPublicado.ToString("dd 'de' MMMM yyyy")</p>
                        </div>

                    </div>
               </div>
            }
               
     

        }
        else
        {
            
            <div class="col-12">

                <p>No Existe Registro</p>

            </div>
    
        }
    </div>

</div>
