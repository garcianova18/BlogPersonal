@model DTOs.DTO.EditPostVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row  justify-content-evenly bg-light rounded-3 p-5">

    <div class=" col-12 col-md-8 ">

        <h4 class="text-center">Editar Entrada</h4>

        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group mb-3">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for=Descripcion id="summernote" class="form-control" ></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 d-flex ">
               

                <div class="pe-5">
                    <label asp-for="IdCategoria" class="control-label"></label>
                    <select asp-for="IdCategoria" class="form-control" asp-items="@ViewBag.IdCategoria"></select>
                </div>
                <div>
                    <label asp-for="ImagenFile" class="control-label"></label>
                    <input type="file" asp-for="ImagenFile" class="form-control" accept="/image/png, image/jpeg" />
                    <span asp-validation-for="ImagenFile" class="text-danger"></span>
                </div>
            </div>

           

            <div class="form-group  d-flex justify-content-between pb-3">
                <input type="submit" value="Enviar" class="btn btn-primary" />
                <div>
                    <a asp-action="Details" asp-controller="Post" asp-route-id="@Model.Id" class=" btn btn-secondary">regresar</a>
                </div>
            </div>
        </form>
    </div>

    <div class="col-12 col-md-4 text-center mt-5 ">

        <img src="/Imagenes/@Model.Imagen" class="img-fluid img-thumbnail" width="400" />
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $('#summernote').summernote({
            placeholder: 'Hello stand alone ui',
            tabsize: 2,
            height: 300,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>
}
